<div class="h4">First name: <%= @user.first_name %></div>
<div class="h4">Last name: <%= @user.last_name %></div>
<div class="h4">Email: <%= @user.email %></div>
<%= link_to edit_users_url(@user), :class => 'btn btn-warning' do %>
  <i class="glyphicon glyphicon-edit"></i> Edit user
<% end %>
<hr>
<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to "Add new pet", "users/#{@user.id}/pets/new", {:class => 'btn btn-info btn-xs pull-right'} %>
      <h3 class="panel-title">Pets </h3>
    </div>
    <div class="panel-body">
      <% if !@user.pets.empty? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <td>Name</td>
              <td>Age</td>
              <td>Gender</td>
              <td>Type</td>
              <td>Alive</td>
            </tr>
          </thead>
          <tbody>

            <% @user.pets.each do |pet| %>
              <tr>
                <td><%= pet.name %></td>
                <td><%= pet.age %></td>
                <td><%= pet.gender %></td>
                <td><%= pet.pet_type.type_name %></td>
                <td><%= check_box_tag 'alive', 1, pet.alive, disabled: true %></td>
              </tr>
            <% end %>

          </tbody>
        </table>
      <% else %>
        <div class="text-info">No pets yet</div>
      <% end %>
    </div>
  </div>
</div>
